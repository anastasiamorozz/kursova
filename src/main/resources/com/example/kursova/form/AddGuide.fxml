<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>


<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.kursova.controller.AddGuideController" spacing="10" style="-fx-padding: 20;">
    <TextField fx:id="nameField" promptText="Ім'я гіда"/>
    <TextField fx:id="languageField" promptText="Мова"/>
    <TextField fx:id="phoneField" promptText="Телефон"/>
    <Label fx:id="errorLabel" textFill="red" />
    <Button text="Додати гіда" onAction="#addGuide"/>
</VBox>
